@page
@model WebApplication1.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="flex justify-center items-center min-h-screen py-2 px-4">
    <div class="w-full max-w-md">
        <div class="mb-8 text-center">
            <h2 class="text-3xl font-bold text-gray-900 mb-3">Create Account</h2>
            <p class="text-gray-600">Join us and start your journey</p>
        </div>

        <div class="bg-white rounded-2xl shadow-lg overflow-hidden transform transition-all hover:shadow-xl">
            <div class="p-8">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="mb-4 text-sm text-red-600 bg-red-50 rounded-lg p-3 border border-red-200" role="alert"></div>

                    <div class="mb-5">
                        <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 mb-2">
                            Email Address
                        </label>
                        <div class="mt-1 relative rounded-md shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                                </svg>
                            </div>
                            <input asp-for="Input.Email" autocomplete="username" aria-required="true"
                                   class="pl-10 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm px-4 py-3"
                                   placeholder="name@example.com" />
                        </div>
                        <span asp-validation-for="Input.Email" class="mt-1 text-xs text-red-500 block"></span>
                    </div>

                    <div class="mb-5">
                        <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700 mb-2">
                            Password
                        </label>
                        <div class="mt-1 relative rounded-md shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                                </svg>
                            </div>
                            <input asp-for="Input.Password" type="password" autocomplete="new-password" aria-required="true"
                                   class="pl-10 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm px-4 py-3"
                                   placeholder="••••••••" />
                        </div>
                        <span asp-validation-for="Input.Password" class="mt-1 text-xs text-red-500 block"></span>
                    </div>

                    <div class="mb-5">
                        <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-2">
                            Confirm Password
                        </label>
                        <div class="mt-1 relative rounded-md shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                                </svg>
                            </div>
                            <input asp-for="Input.ConfirmPassword" type="password" autocomplete="new-password" aria-required="true"
                                   class="pl-10 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm px-4 py-3"
                                   placeholder="••••••••" />
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="mt-1 text-xs text-red-500 block"></span>
                    </div>

                    <div>
                        <button id="registerSubmit" type="submit"
                                class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg text-sm font-medium
                            text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500
                            transition-all duration-200 transform hover:-translate-y-1 shadow-md">
                            Create Account
                        </button>
                    </div>
                </form>
            </div>

            <div class="px-8 py-5 bg-gray-50 text-center border-t border-gray-100">
                <p class="text-sm text-gray-600">
                    Already have an account?
                    <a href="/Identity/Account/Login" class="text-sm font-medium text-indigo-600 hover:text-indigo-500 ml-1 transition-colors duration-150">
                        Sign in
                    </a>
                </p>
            </div>
        </div>

        <div class="mt-6 text-center text-xs text-gray-500">
            <p>By registering, you agree to our <a href="#" class="text-indigo-600 hover:underline">Terms</a> and <a href="#" class="text-indigo-600 hover:underline">Privacy Policy</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}