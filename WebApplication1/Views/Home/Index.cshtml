@{
    ViewData["Title"] = "Home";
}


<div class="flex-grow container mx-auto px-4 py-8">
    <!-- Hero Section -->
    <div class="relative">
        <div class="pt-12 pb-16">
            <div class="lg:grid lg:grid-cols-12 lg:gap-8">
                <div class="sm:text-center md:max-w-2xl md:mx-auto lg:col-span-6 lg:text-left lg:flex lg:items-center">
                    <div>
                        <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl lg:text-5xl xl:text-6xl">
                            <span class="block xl:inline">The Next Evolution in</span>
                            <span class="block text-indigo-600 xl:inline">Education Experience</span>
                        </h1>
                        <p class="mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">
                            Transform your learning journey with Edu-Collage's cutting-edge e-learning platform. Gain skills, earn credentials, and advance your career with our interactive courses.
                        </p>
                        <div class="mt-8 sm:max-w-lg sm:mx-auto sm:text-center lg:text-left lg:mx-0">
                            <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
                                <div class="rounded-md shadow">
                                    <a asp-controller="Courses" asp-action="Browse" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 md:py-4 md:text-lg md:px-10">
                                        Start Learning
                                    </a>
                                </div>
                                <div class="mt-3 sm:mt-0 sm:ml-3">
                                    <a href="#features" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 md:py-4 md:text-lg md:px-10">
                                        Learn More
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mt-12 relative sm:max-w-lg sm:mx-auto lg:mt-0 lg:max-w-none lg:mx-0 lg:col-span-6 lg:flex lg:items-center">
                    <div class="relative mx-auto w-full rounded-lg shadow-lg lg:max-w-md">
                        <img class="w-full rounded-lg" src="https://www.edgehill.ac.uk/wp-content/uploads/2022/01/Modern-uni-full-colour.jpg" alt="Students learning online">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div id="features" class="py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <h2 class="text-base font-semibold text-indigo-600 tracking-wide uppercase">Features</h2>
                <p class="mt-1 text-4xl font-extrabold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-5xl">Why Choose Edu-Collage</p>
                <p class="max-w-xl mt-5 mx-auto text-xl text-gray-500">The smart way to transform your education experience.</p>
            </div>

            <div class="mt-12">
                <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
                    <div class="pt-6">
                        <div class="flow-root bg-gray-50 rounded-lg px-6 pb-8 h-full">
                            <div class="-mt-6">
                                <div>
                                    <span class="inline-flex items-center justify-center p-3 bg-indigo-500 rounded-md shadow-lg">
                                        <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                        </svg>
                                    </span>
                                </div>
                                <h3 class="mt-8 text-lg font-medium text-gray-900 tracking-tight">Interactive Learning Experience</h3>
                                <p class="mt-5 text-base text-gray-500">
                                    Engage with dynamic content, interactive quizzes, and hands-on projects that make learning both effective and enjoyable.
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="pt-6">
                        <div class="flow-root bg-gray-50 rounded-lg px-6 pb-8 h-full">
                            <div class="-mt-6">
                                <div>
                                    <span class="inline-flex items-center justify-center p-3 bg-indigo-500 rounded-md shadow-lg">
                                        <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                    </span>
                                </div>
                                <h3 class="mt-8 text-lg font-medium text-gray-900 tracking-tight">Learn at Your Own Pace</h3>
                                <p class="mt-5 text-base text-gray-500">
                                    Access course materials anytime, anywhere. Our flexible platform adapts to your schedule, allowing you to learn when it suits you best.
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="pt-6">
                        <div class="flow-root bg-gray-50 rounded-lg px-6 pb-8 h-full">
                            <div class="-mt-6">
                                <div>
                                    <span class="inline-flex items-center justify-center p-3 bg-indigo-500 rounded-md shadow-lg">
                                        <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                                        </svg>
                                    </span>
                                </div>
                                <h3 class="mt-8 text-lg font-medium text-gray-900 tracking-tight">Expert Instructors</h3>
                                <p class="mt-5 text-base text-gray-500">
                                    Learn from industry professionals and academic experts who bring real-world experience to their teaching.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Popular Courses -->
    <div class="py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <h2 class="text-base font-semibold text-indigo-600 tracking-wide uppercase">Curriculum</h2>
                <p class="mt-1 text-4xl font-extrabold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-4xl">Popular Courses</p>
                <p class="max-w-xl mt-5 mx-auto text-xl text-gray-500">Explore our most sought-after learning paths.</p>
            </div>

            <div class="mt-12 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
                <!-- Course Card 1 -->
                <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                    <div class="relative pb-48">
                        <img class="absolute inset-0 h-full w-full object-cover" src="/images/course-web-development.jpg" alt="Web Development course">
                    </div>
                    <div class="p-6">
                        <span class="inline-block px-3 py-1 text-xs font-semibold text-indigo-700 bg-indigo-100 rounded-full">Programming</span>
                        <h3 class="mt-2 text-xl font-bold leading-tight">Full Stack Web Development</h3>
                        <p class="mt-2 text-gray-600">Learn to build interactive web applications from front to back end.</p>
                        <div class="mt-4 flex items-center">
                            <div class="flex-shrink-0">
                                <img class="h-10 w-10 rounded-full" src="/images/instructor-1.jpg" alt="Instructor">
                            </div>
                            <div class="ml-3">
                                <p class="text-sm font-medium text-gray-900">Dr. James Wilson</p>
                                <p class="text-sm text-gray-500">Senior Developer</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Course Card 2 -->
                <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                    <div class="relative pb-48">
                        <img class="absolute inset-0 h-full w-full object-cover" src="/images/course-data-science.jpg" alt="Data Science course">
                    </div>
                    <div class="p-6">
                        <span class="inline-block px-3 py-1 text-xs font-semibold text-green-700 bg-green-100 rounded-full">Data Science</span>
                        <h3 class="mt-2 text-xl font-bold leading-tight">Data Analytics Fundamentals</h3>
                        <p class="mt-2 text-gray-600">Master the core concepts of data analysis and visualization.</p>
                        <div class="mt-4 flex items-center">
                            <div class="flex-shrink-0">
                                <img class="h-10 w-10 rounded-full" src="/images/instructor-2.jpg" alt="Instructor">
                            </div>
                            <div class="ml-3">
                                <p class="text-sm font-medium text-gray-900">Prof. Sarah Chen</p>
                                <p class="text-sm text-gray-500">Lead Data Scientist</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Course Card 3 -->
                <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                    <div class="relative pb-48">
                        <img class="absolute inset-0 h-full w-full object-cover" src="/images/course-business.jpg" alt="Business course">
                    </div>
                    <div class="p-6">
                        <span class="inline-block px-3 py-1 text-xs font-semibold text-blue-700 bg-blue-100 rounded-full">Business</span>
                        <h3 class="mt-2 text-xl font-bold leading-tight">Strategic Business Management</h3>
                        <p class="mt-2 text-gray-600">Develop leadership skills and business acumen for today's market.</p>
                        <div class="mt-4 flex items-center">
                            <div class="flex-shrink-0">
                                <img class="h-10 w-10 rounded-full" src="/images/instructor-3.jpg" alt="Instructor">
                            </div>
                            <div class="ml-3">
                                <p class="text-sm font-medium text-gray-900">Dr. Michael Patel</p>
                                <p class="text-sm text-gray-500">Business Consultant</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-10 text-center">
                <a href="#" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
                    Browse All Courses
                    <svg class="ml-2 -mr-1 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </a>
            </div>
        </div>
    </div>

    <!-- CTA Section -->
    <div class="bg-indigo-700 rounded-lg mt-10 px-6 py-12">
        <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8 lg:py-16">
            <div class="lg:grid lg:grid-cols-2 lg:gap-8 lg:items-center">
                <div>
                    <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
                        Ready to start your learning journey?
                    </h2>
                    <p class="mt-4 text-lg text-indigo-100">
                        Join thousands of students already transforming their careers with Edu-Collage's innovative learning platform. Get started today and take the next step in your education experience.
                    </p>
                    <div class="mt-8">
                        <div class="inline-flex rounded-md shadow">
                            <a href="/Identity/Account/Register" class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-indigo-700 bg-white hover:bg-indigo-50">
                                Create free account
                                <svg class="ml-2 -mr-1 h-5 w-5 text-indigo-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="mt-10 lg:mt-0">
                    <img class="rounded-lg shadow-xl" src="https://th.bing.com/th/id/R.edf8d5c52c44fc9b5a279974db9486f2?rik=L12gW0KlFAVrcw&pid=ImgRaw&r=0" alt="Students collaborating online">
                </div>
            </div>
        </div>
    </div>
</div>
 