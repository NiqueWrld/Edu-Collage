@model WebApplication1.Models.Module

@{
    ViewData["Title"] = "Create";
}

<div class="max-w-4xl mx-auto py-6">

    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Add Module</h1>
        <p class="text-gray-600 mt-2">Fill in the details below to add a new module to the system</p>
    </div>

    <div class="bg-white shadow-sm rounded-lg p-6">
            <form asp-action="AddModule" class="bg-white rounded-lg shadow-sm p-6">
                <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4 text-sm"></div>
                <input asp-for="CourseId" class="hidden" value="@ViewBag.CourseId" />

                <div class="mb-4">
                    <label asp-for="ModuleName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="ModuleName" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="ModuleName" class="mt-1 text-sm text-red-500"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ModuleCode" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="ModuleCode" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="ModuleCode" class="mt-1 text-sm text-red-500"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Semester" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <select asp-for="Semester" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <option value="">-- Select Semester --</option>
                        <option value="Semester1">Semester 1</option>
                        <option value="Semester2">Semester 2</option>
                    </select>
                    <span asp-validation-for="Semester" class="mt-1 text-sm text-red-500"></span>
                </div>

            <div class="mb-5">
                <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                <textarea asp-for="Description" rows="3" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm"></textarea>
                <span asp-validation-for="Description" class="text-red-500 text-sm mt-1 block"></span>
            </div>

                <div class="mb-6">
                    <label asp-for="Year" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Year" min="1" max="@ViewBag.CourseYears" type="number" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="Year" class="mt-1 text-sm text-red-500"></span>
                </div>

            <div class="mb-4">
                <label asp-for="ModulePrice" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="ModulePrice" type="number" step="0.01" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="ModulePrice" class="mt-1 text-sm text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ClassDay" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <select asp-for="ClassDay" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    <option value="">-- Select Day --</option>
                    @foreach (var day in Enum.GetValues(typeof(DayOfWeek)))
                    {
                        <option value="@day">@day</option>
                    }
                </select>
                <span asp-validation-for="ClassDay" class="mt-1 text-sm text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ClassTime" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="ClassTime" type="time" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="ClassTime" class="mt-1 text-sm text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ModuleVenue" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="ModuleVenue" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="ModuleVenue" class="mt-1 text-sm text-red-500"></span>
            </div>


                <div class="flex items-center justify-between">
                    <input type="submit" value="Create" class="px-4 py-2 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" />

                    <a asp-action="CourseDetails" asp-route-id="@ViewBag.CourseId" class="text-blue-600 hover:text-blue-800 hover:underline font-medium">
                        Back to Course
                    </a>
                </div>
            </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}