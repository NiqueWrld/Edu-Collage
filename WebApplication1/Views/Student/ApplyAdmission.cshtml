@model WebApplication1.Models.Application

@{
    ViewData["Title"] = "Create Application";
}

<div class="bg-gray-50 min-h-screen py-8">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex items-center justify-between">
                <h1 class="text-2xl font-bold text-gray-900">Create Application</h1>
            </div>
        </div>

        <!-- Application Form -->
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <form asp-action="ApplyAdmission" enctype="multipart/form-data">
                <div class="px-6 py-5 border-b border-gray-200">
                    <div class="flex justify-between items-center">
                        <h2 class="text-lg font-medium text-gray-900">Application Details</h2>
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                            <svg class="-ml-1 mr-1.5 h-2 w-2 text-blue-400" fill="currentColor" viewBox="0 0 8 8">
                                <circle cx="4" cy="4" r="3" />
                            </svg>
                            New Application
                        </span>
                    </div>
                </div>

                <div class="px-6 py-5 space-y-6">
                    <!-- Validation summary -->
                    <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 text-sm text-red-600 px-4 py-3 rounded mb-6"></div>

                    <!-- Application Information -->

                    <div class="pt-3">
                        <h3 class="text-base font-medium text-gray-900 mb-4">Personal Information</h3>
                        <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
                            <div class="sm:col-span-3">
                                <label asp-for="FirstName" class="block text-sm font-medium text-gray-700">First Name</label>
                                <div class="mt-1">
                                    <input asp-for="FirstName" required class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" />
                                    <span asp-validation-for="FirstName" class="text-xs text-red-500"></span>
                                </div>
                            </div>

                            <div class="sm:col-span-3">
                                <label asp-for="LastName" class="block text-sm font-medium text-gray-700">Last Name</label>
                                <div class="mt-1">
                                    <input asp-for="LastName" required class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" />
                                    <span asp-validation-for="LastName" class="text-xs text-red-500"></span>
                                </div>
                            </div>

                            <div class="sm:col-span-3">
                                <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700">Phone Number</label>
                                <div class="mt-1">
                                    <input asp-for="PhoneNumber" required class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" />
                                    <span asp-validation-for="PhoneNumber" class="text-xs text-red-500"></span>
                                </div>
                            </div>

                            <div class="sm:col-span-3">
                                <input asp-for="DateOfBirth"
                                       required
                                       type="date"
                                       id="dob"
                                       class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" />

                                <div class="mt-1">
                                   
                                    <span asp-validation-for="DateOfBirth" class="text-xs text-red-500"></span>
                                </div>
                            </div>

                            <div class="sm:col-span-6">
                                <label asp-for="Address" class="block text-sm font-medium text-gray-700">Address</label>
                                <div class="mt-1">
                                    <input asp-for="Address" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" />
                                    <span asp-validation-for="Address" class="text-xs text-red-500"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="pt-5 border-t border-gray-200">
                        <h3 class="text-base font-medium text-gray-900 mb-4">Course Information</h3>
                        <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
                            <div class="sm:col-span-4">
                                <label asp-for="CourseId" class="block text-sm font-medium text-gray-700">Course</label>
                                <div class="mt-1">
                                    <select asp-for="CourseId" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" asp-items="ViewBag.CourseId"></select>
                                </div>
                            </div>

                            <div class="sm:col-span-2">
                                <label asp-for="StudyYear" class="block text-sm font-medium text-gray-700">Study Year</label>
                                <div class="mt-1">
                                    <select asp-for="StudyYear" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
                                        <option value="2025">2025</option>
                                        <option value="2026">2026</option>
                                        <option value="2027">2027</option>
                                        <option value="2028">2028</option>
                                    </select>
                                    <span asp-validation-for="StudyYear" class="text-xs text-red-500"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="pt-5 border-t border-gray-200">
                        <h3 class="text-base font-medium text-gray-900 mb-4">Document Paths</h3>
                        <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
                            <div class="sm:col-span-6">
                                <label asp-for="IdentificationDocumentPath" class="block text-sm font-medium text-gray-700">ID Document</label>
                                <div class="mt-1">
                                    <input asp-for="IdentificationDocumentPath" required type="file" accept="image/*" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" />
                                    <span asp-validation-for="IdentificationDocumentPath" class="text-xs text-red-500"></span>
                                </div>
                            </div>

                            <div class="sm:col-span-6">
                                <label asp-for="AcademicRecordsPath" class="block text-sm font-medium text-gray-700">Academic Records</label>
                                <div class="mt-1">
                                    <input asp-for="AcademicRecordsPath" type="file" required accept="image/*" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" />
                                    <span asp-validation-for="AcademicRecordsPath" class="text-xs text-red-500"></span>
                                </div>
                            </div>

                            <div class="sm:col-span-6">
                                <label asp-for="MotivationLetterPath" class="block text-sm font-medium text-gray-700">Motivation Letter (Optional)</label>
                                <div class="mt-1">
                                    <input asp-for="MotivationLetterPath" type="file" accept="image/*" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" />
                                    <span asp-validation-for="MotivationLetterPath" class="text-xs text-red-500"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="px-6 py-5 bg-gray-50 flex items-center justify-between">
                    <a asp-action="Index" class="text-sm font-medium text-indigo-600 hover:text-indigo-500">
                        <svg class="inline-block h-4 w-4 mr-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                        </svg>
                        Back to List
                    </a>
                    <div class="flex space-x-3">
                        <button type="reset" class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            Reset Form
                        </button>
                        <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                            </svg>
                            Create Application
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Set the max date to today minus 16 years
        const dobInput = document.getElementById("dob");
        const today = new Date();
        const year = today.getFullYear() - 16;
        const month = (today.getMonth() + 1).toString().padStart(2, '0');
        const day = today.getDate().toString().padStart(2, '0');
        dobInput.max = `${year}-${month}-${day}`;
    </script>
}